    <style>
      /* Custom styles for the search section */
      .welcome-hero {
        background-color: #f8f9fa;
        padding: 100px 0;
      }

      .welcome-hero-txt h2 {
        font-size: 66px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
      }

      .welcome-hero-serch-box {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .single-welcome-hero-form {
        flex: 1;
        margin-right: 20px;
      }

      .single-welcome-hero-form h3 {
        font-size: 20px;
        color: #333;
      }

      .single-welcome-hero-form input {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .welcome-hero-form-icon i {
        font-size: 24px;
        color: #007bff;
      }

      .welcome-hero-serch .welcome-hero-btn {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
      }

      .welcome-hero-serch .welcome-hero-btn i {
        margin-left: 5px;
      }

      /* Additional styles can be added as needed */
    </style>
  </head>

